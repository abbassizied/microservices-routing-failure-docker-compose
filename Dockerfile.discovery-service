#############################################################
############ Stage 1: Build the application #################
#############################################################
FROM maven:3.9.11-eclipse-temurin-21 AS builder
WORKDIR /app
# 1. Copy parent POM first (essential for multi-module projects)
# Parent POM
COPY pom.xml .  
# Submodule POM
COPY discovery-service/pom.xml ./discovery-service/

# 2. Download dependencies (faster rebuilds when only code changes)
RUN mvn dependency:go-offline -pl discovery-service
# 3. Copy source code
COPY discovery-service/src ./discovery-service/src/

# 4. Build the specific submodule
RUN mvn package -pl discovery-service -am -DskipTests

#############################################################
############ Stage 2: Run the application  ##################
#############################################################
FROM eclipse-temurin:21.0.7_6-jdk
WORKDIR /app
COPY --from=builder /app/discovery-service/target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app.jar"]
#############################################################
#############################################################
#############################################################